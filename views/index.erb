<html>
  <title>
  To-Do-list!
  </title>
  <head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>			
  </head>
  <body>
  <!--encabezado formulario para crear tareas -->
    <div class="jumbotron">
	    <div class="container">
		    <h1>You have stuffs to Do!</h1>
		    <div class="form-group">
		    <form action="/new/task" method="post">
		    	<input type="text" class="form-control" placeholder="your Task" name="task">
		    	<input type="submit" class="btn btn-default"></input>
		    </form>
		    </div>
	    </div>
    </div>
  <!--regilla para las dos listas-->
  <div class="container">
	  <div class="row">
	  <!--columna de la izquierda-->
	  	<div class="col-md-6"><h2>Stuffs to do</h2>
	  	<ul>
	  		<% @tasks.each do |t|%>
	  			<%if t["done"] == false %>
	  			<li> <p> <%= t["title"]%> <a href="/task/<%=t['id']%>"><span class="glyphicon glyphicon-ok"></span></a></p></li>
	  			<%end %>
	  		<%end %>
	  	</ul>
	  	</div>
	  <!--columna de la derecha-->
	  	<div class="col-md-6"><h2>Stuffs you have done</h2>
	  	<ul>
	  		<% @tasks.each do |t|%>
	  			<%if t["done"] == true %>
	  			<li> <p> <%= t["title"]%> <a href="/task/<%=t['id']%>/delete"><span class="glyphicon glyphicon-remove"></span></a></p></li>
	  			<%end %>
	  		<%end %>
	  	</ul>
	  	</div>
	  </div>	
  </div>

  </body>
</html>